

<html>
<head>
    <title>UserLogin</title>
    <style>
        .login-container {
            margin-left: auto;
            margin-right: auto;
            width: 200px;
            height: 200px;
            border: 1px solid black;
        }
    </style>
</head>

<body>
    <div class="login-container">
        <form>
            <label>UserID:</label>
            <input type="text" id="UserID" /><br><br>
            <label>UserPassword:</label>
            <input type="Password" id="UserPassword" /><br><br>
            <input type="button" value="login" onclick="UserValidation()" />
        </form>
    </div>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

    <script>
        //$(document).ready(function () {
        //    loadData();
        //});

        function UserValidation() {

            var UserID = $('#UserID').val();
           var UserPassword = $('#UserPassword').val();


            $.ajax({
                url: "/User/GetMyMRF",
                data: { UserID: UserID, UserPassword: UserPassword },
                type: "GET",
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function (result) {
                    if (result == 1) {
                      //alert('successfully logged In');
                        window.location = "http://localhost:61474//MRF/GetMRFDetails";
                    }
                    else {
                        alert('loggin is incorrect');
                    }
                },
                error: function (errormessage) {
                    alert(errormessage.responseText);
                }
            });
        }


    </script>
</body>
</html>





