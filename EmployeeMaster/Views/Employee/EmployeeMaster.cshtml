
@{
    ViewBag.Title = "EmployeeMaster";
}
<div class="col-sm-12">
    <div class="card border border-primary">
        <div class="card-header bg-primary text-white">
            Employee Master
        </div>
        <div class="card-body">
            <form>
                <div class="form-row mt-2">

                    <label class="col-form-label col-sm-3">Employee Name</label>
                    <input type="text" class="form-control col-sm-3" id="txtemp" maxlength="100" />
                    <input type="hidden" id="hdnempid" />
                    <div class="col-sm-3"></div>
                    <div class="col-sm-3"></div>
                </div>
                <div class="form-row mt-2">

                    <label class="col-form-label col-sm-3">Employee Number</label>
                    <input type="text" class="form-control col-sm-3" id="txtempno" maxlength="30" />
                    <div class="col-sm-3"></div>
                    <div class="col-sm-3"></div>
                </div>
               
                <div class="form-row mt-2">

                    <label class="col-form-label col-sm-3">Region Name</label>
                    <input type="text" id="txtregion" class="form-control col-sm-3" maxlength="50" />
                    <div class="col-sm-3"></div>
                    <div class="col-sm-3"></div>
                </div>
                <div class="form-row mt-2">

                    <label class="col-form-label col-sm-3">Email</label>
                    <input type="email" class="form-control col-sm-3" id="txtmail" maxlength="50" />
                    <div class="col-sm-3"></div>
                    <div class="col-sm-3"></div>
                </div>
                <div class="form-row mt-2">

                    <label class="col-form-label col-sm-3">Password</label>
                    <input type="password" class="form-control col-sm-3" id="txtpwd" maxlength="30" />
                    <div class="col-sm-3"></div>
                    <div class="col-sm-3"></div>
                </div>
                <div class="form-row mt-2">
                    <div class="col-sm-6 text-center">
                        <button type="button" class="btn btn-success btn-sm mr-1" id="btnsave" onclick="emp.fnsaveemp();">Save</button>
                        <button type="reset" class="btn btn-default btn-sm" onclick="emp.fncancel();">Cancel</button>
                    </div>
                    <div class="col-sm-6"></div>
                </div>
            </form>
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#tabs-1" style="text-align: center;">Active Users</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tabs-2" style="text-align: center;">In-Active Users</a>
                </li>
            </ul>
            <div class="tab-content">
                <div class="tab-pane active" id="tabs-1">
                    <div id="Grid" class="mt-3">
                    </div>
                </div>
                <div class="tab-pane fade" id="tabs-2">
                    <div id="Grid1" class="mt-3">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        emp.init();
        $('input[type="text"]').attr('autocomplete', 'off');
    });
</script>


